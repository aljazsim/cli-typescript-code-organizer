{
    "compilerOptions": {
        "sourceRoot": "./",
        "paths": {
            "src/*": ["./src/*"],
            "test/*": ["./test/*"]
        },
        "outDir": "dist",
        "strict": true,
        "target": "ESNext",
        "module": "Node16",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": [
        "node_modules/**/*",
        "test/ignore-files/ts-files/**/*",
        "test/organize-files/ts-files/**/*"
    ]
}
