{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "out",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": [
        "node_modules/**/*",
        "test/ignore-files/ts-files/**/*",
        "test/organize-files/ts-files/**/*"
    ]
}
